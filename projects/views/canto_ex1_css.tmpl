/* Basic CSS File for SailForte */

/* Global CSS Settings */

.html,body {
	height: 100%;
}

/* Global Colors */

.sail_white {
	color: #<?spar put( rgb_white ); ?>;
}

.sail_black {
	color: #<?spar put( rgb_black ); ?>;
}

.sail_fail {
	color: #<?spar put( rgb_fail ); ?>;
}

.sail_caution {
	color: #<?spar put( rgb_caution ); ?>;
}

.sail_success {
	color: #<?spar put( rgb_success ); ?>;
}

/* Global Fonts */

.sail_normal {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 12pt;
}

/* A div with a scroll bar */

.sail_div_scroll {
    border: 1px dotted black;
    height: 120px;
    width: 100%;
    overflow: auto;
}

/* Layouts */

/* 3 Column Stackable Layout */

.sail_1_of_3 {
    display: inline-block;
    width: 32%;
    vertical-align: top;
    margin-right: 10px;
    margin-bottom: 10px;
    min-width: 200px;
}

.sail_2_of_3 {
    display: inline-block;
    width: 32%;
    vertical-align: top;
    margin-right: 10px;
    margin-bottom: 10px;
    min-width: 200px;
}

.sail_3_of_3 {
    display: inline-block;
    width: 32%;
    vertical-align: top;
    margin-bottom: 10px;
    /* spacer when stacked in a tight display */
    min-width: 200px;
}

